alias g := generate

go := "go"
module := "github.com/harehare/textusm"
run := go + " run"
fmt := go + " fmt"
build := go + " build"
test := go + " test"
generate := go + " generate"
lint := "staticcheck"
sec := "gosec"
main := "cmd/main.go"
target := "./..."

setup:
  {{ go }} get honnef.co/go/tools/cmd/staticcheck
  {{ go }} get github.com/securego/gosec/v2/cmd/gosec
  go install golang.org/x/tools/go/analysis/passes/fieldalignment/cmd/fieldalignment@latest

run:
	{{ run }} {{ main }}

build:
	{{ build }} -o dist/textusm {{ main }}

build-linux:
	GOOS="linux" GOARCH="amd64" {{ build }} -o dist/textusm {{ main }}

embed-build:
	{{ build }} -tags embed -o textusm-embed {{ main }}

generate:
	{{ generate }} {{ target }}

test:
	{{ test }} {{ target }}

fmt:
  {{ fmt }}

lint:
	{{ lint }} {{ module }}
	{{ sec }} {{ target }}

clean:
	{{ go }} mod tidy

fix:
	fieldalignment -fix pkg/domain/model/item/gistitem/gistitem.go
	fieldalignment -fix pkg/domain/model/item/gistitem/gistitem.go
	fieldalignment -fix pkg/presentation/graphql/models.go
